{% extends 'base_back.html.twig' %}

{% block title %}Delete Employee{% endblock %}

{% block body %}
    <h1>Are you sure you want to delete this employee?</h1>

    <form action="{{ path('app_employe_delete', {'id': employe.id}) }}" method="POST">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ employe.id) }}">
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a href="{{ path('app_employe_index') }}" class="btn btn-secondary">No, Go Back</a>
    </form>
{% endblock %}
