<!-- Styles pour l'effet de zoom sur l'image -->
<style>
    /* Conteneur de la carte */
    .card-container {
        overflow: hidden;
        border-radius: 8px;
        transition: transform 0.3s ease-in-out;
    }

    /* Image du mat√©riel */
    .card-img-fixed {
        width: 100%;
        height: 300px; /* Hauteur uniforme */
